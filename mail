Send a new message using a view.

# .env
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# routes/web.php
Route::get('/', function () {
    Mail::send('welcome', [], function($message) {
    	$message->to('RECEIVER_EMAIL', 'RECEIVER_NAME')
    			->subject('SUBJECT')
    			->from('SENDER_EMAIL', 'SENDER_NAME');
    });
});
